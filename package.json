{
  "name": "w3c-offline-html-validator",
  "displayName": "W3C Offline HTML Validator",
  "description": "A VSCode extension for offline HTML validation using W3C standards.",
  "version": "0.0.9",
  "icon": "icon.jpg",
  "engines": {
    "vscode": "^1.93.0"
  },
  "repository": "https://github.com/fgmnts/w3c-offline-html-validator",
  "publisher":"fgmnts",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onSave"
  ],  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "htmlValidator.toggleValidation",
        "title": "Toggle HTML Validation"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
