{
  "name": "w3c-offline-html-validator",
  "displayName": "W3C Offline HTML Validator",
  "description": "A VSCode extension for offline HTML validation using W3C standards.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  
  "categories": [
    "Other"
  ],
  "activationEvents": [
    
    "onLanguage:html",
    "onSave"
  ],  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "HTML Validator Settings",
      "properties": {
        "htmlValidator.vnuJarPath": {
          "type": "string",
          "default": "${workspaceFolder}/validator/vnu.jar",
          "description": "Path to the vnu.jar file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
